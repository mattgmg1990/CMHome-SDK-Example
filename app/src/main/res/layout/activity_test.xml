<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TestActivity">

    <Button
        android:id="@+id/add_card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_card_button"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/remove_cards_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_card_button"
        android:text="@string/remove_all_cards_button"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/update_card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remove_cards_button"
        android:text="@string/update_card_button"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/update_card_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_card_button"
        android:text="@string/update_card_2_button"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
